<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <script>
        function createPoint(ctx, Lat, Lon) {
             
              ctx.beginPath();
              ctx.arc(Lat, Lon, 6, 0, 2 * Math.PI);
              ctx.strokeStyle = "blue";
              ctx.fillStyle = 'red';
              ctx.fill();
              ctx.stroke();
        }
        function createLine(ctx, xml) {
            var lastLon;
            var lastLat;
            var xmlDoc = $.parseXML(xml),
                $xml = $(xmlDoc),
             lastLat = (parseFloat($xml.find("lastLat").text()) + 90) * cnvs.height / 180;
             lastLon = (parseFloat($xml.find("lastLon").text()) + 180) * cnvs.width / 360;
             Lat = (parseFloat($xml.find("Lat").text()) + 90) * cnvs.height / 180;
             Lon = (parseFloat($xml.find("Lon").text()) + 180) * cnvs.width / 360;
             
            $("#prodLat").text(Lat);
            $("#prodLon").text(Lon);


            ctx.lineWidth = '5';
            ctx.strokeStyle = "red";
            ctx.moveTo(lastLat, lastLon);
            ctx.lineTo(Lat,Lon)
            //ctx.quadraticCurveTo(lastLat + 5, lastLon + 25, Lat, Lon);
            ctx.stroke();
            
        }
    </script>

        @RenderBody()
     
</body>
</html>